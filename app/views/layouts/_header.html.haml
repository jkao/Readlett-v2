#main-nav.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{ :"data-toggle" => "collapse", :"data-target" => ".nav-collapse" }
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to "Mediac", root_path, :class => "brand"
      .nav-collapse
        %ul.nav
          - if signed_in?
            %li= link_to "My Bookmarks", "#"
          %li= link_to "Explore!", "#"
          %li= link_to "Tags", categories_path
        %ul.nav.pull-right
          %li= link_to "Bookmarklet", "#", { :"data-toggle" => "modal", :"data-target" => "#bookmarklet-code-dialog" }
          - if signed_in?
            %li.dropdown
              %a.dropdown-toggle{ :"data-toggle" => "dropdown", :href => "#" }= current_user.name
              %ul.dropdown-menu
                %li= link_to "My Profile", "#"
                %li.divider
                %li= link_to "Sign Out", logout_path
          - else
            %li= link_to "Register/Sign In", "#", { :"data-toggle" => "modal", :"data-target" => "#sign-in-dialog" }
